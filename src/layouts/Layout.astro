---
interface Props {
  title: string;
}
import { ViewTransitions } from "astro:transitions";
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import ToastInfo from "@components/resources/ToastInfo.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Un falso ecommerce, no tiene pasarela de pago, pero podes armar tu pedido y enviarlo. Creado para mi portafolio, con Astro y Strapi." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-200 text-neutral-800 dark:text-gray-200 dark:bg-neutral-800">
    <main class="px-2 sm:px-4 container mx-auto min-h-dvh">
    <Header />
    <slot />
  </main>
    <Footer />
    <ToastInfo />
  </body>
</html>

<style is:global>
  p {
    text-wrap: pretty;
  }

  @font-face {
    font-family: 'Iceberg';
    src: url('/src/fonts/Iceberg.ttf');
  }

  .font-iceberg {
    font-family: 'Iceberg';
  }
</style>
